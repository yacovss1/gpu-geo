{
  "version": 8,
  "name": "3D Buildings Test - DemoTiles",
  "sources": {
    "demotiles": {
      "type": "vector",
      "tiles": [
        "https://demotiles.maplibre.org/tiles/{z}/{x}/{y}.pbf"
      ],
      "minzoom": 0,
      "maxzoom": 6
    }
  },
  "layers": [
    {
      "id": "countries-fill",
      "type": "fill",
      "source": "demotiles",
      "source-layer": "countries",
      "paint": {
        "fill-color": [
          "match",
          ["get", "ADM0_A3"],
          "USA", "#4285f4",
          "CAN", "#ea4335",
          "MEX", "#fbbc04",
          "BRA", "#34a853",
          "#b0bec5"
        ],
        "fill-opacity": 0.8
      }
    },
    {
      "id": "cuba-extrusion",
      "type": "fill-extrusion",
      "source": "demotiles",
      "source-layer": "countries",
      "filter": ["==", ["get", "ADM0_A3"], "CUB"],
      "layout": {
        "visibility": "none"
      },
      "paint": {
        "fill-extrusion-color": "#ea4335",
        "fill-extrusion-height": 500,
        "fill-extrusion-base": 0,
        "fill-extrusion-opacity": 0.9
      }
    },
    {
      "id": "countries-borders",
      "type": "line",
      "source": "demotiles",
      "source-layer": "countries",
      "paint": {
        "line-color": "#263238",
        "line-width": 2
      }
    }
  ]
}
