{
  "version": 8,
  "name": "Carto Streets",
  "sources": {
    "carto": {
      "type": "vector",
      "tiles": ["https://tiles-a.basemaps.cartocdn.com/vectortiles/carto.streets/v1/{z}/{x}/{y}.mvt"],
      "minzoom": 0,
      "maxzoom": 14
    }
  },
  "layers": [
    {
      "id": "water",
      "type": "fill",
      "source": "carto",
      "source-layer": "water",
      "paint": {
        "fill-opacity": 0.5,
        "fill-color": "#a0c8f0"
      }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "carto",
      "source-layer": "landuse",
      "minzoom": 8,
      "paint": {
        "fill-opacity": 0.4,
        "fill-color": "#e8f5e9"
      }
    },
    {
      "id": "parks",
      "type": "fill",
      "source": "carto",
      "source-layer": "park",
      "minzoom": 10,
      "paint": {
        "fill-opacity": 0.4,
        "fill-color": "#c8e6c9"
      }
    },
    {
      "id": "buildings",
      "type": "fill",
      "source": "carto",
      "source-layer": "building",
      "minzoom": 20,
      "paint": {
        "fill-color": "#ff0000",
        "fill-opacity": 0.7
      }
    },
    {
      "id": "roads-minor",
      "type": "line",
      "source": "carto",
      "source-layer": "transportation",
      "filter": ["in", "class", "minor", "service"],
      "minzoom": 10,
      "paint": {
        "line-width": 2,
        "line-color": "#00ff00"
      }
    },
    {
      "id": "roads-major",
      "type": "line",
      "source": "carto",
      "source-layer": "transportation",
      "filter": ["in", "class", "primary", "secondary", "tertiary"],
      "minzoom": 8,
      "paint": {
        "line-width": 3,
        "line-color": "#ffff00"
      }
    },
    {
      "id": "roads-highway",
      "type": "line",
      "source": "carto",
      "source-layer": "transportation",
      "filter": ["in", "class", "motorway", "trunk"],
      "minzoom": 6,
      "paint": {
        "line-width": 4,
        "line-color": "#ff00ff"
      }
    },
    {
      "id": "boundaries",
      "type": "line",
      "source": "carto",
      "source-layer": "boundary",
      "paint": {
        "line-width": 3,
        "line-color": "#ff0000"
      }
    },
    {
      "id": "place-labels",
      "type": "symbol",
      "source": "carto",
      "source-layer": "place",
      "minzoom": 8,
      "layout": {
        "text-field": "{name}",
        "text-size": 12
      },
      "paint": {
        "text-color": "#333333",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    }
  ]
}
