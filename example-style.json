{
  "version": 8,
  "name": "Example MapLibre Style",
  "sources": {
    "demotiles": {
      "type": "vector",
      "tiles": [
        "https://demotiles.maplibre.org/tiles/{z}/{x}/{y}.pbf"
      ],
      "minzoom": 0,
      "maxzoom": 6
    }
  },
  "layers": [
    {
      "id": "countries-fill",
      "type": "fill",
      "source": "demotiles",
      "source-layer": "countries",
      "paint": {
        "fill-color": [
          "match",
          ["get", "ADM0_A3"],
          "USA", "#4285f4",
          "CAN", "#ea4335",
          "MEX", "#fbbc04",
          "BRA", "#34a853",
          "ARG", "#9c27b0",
          "GBR", "#ff6d00",
          "FRA", "#0097a7",
          "DEU", "#5e35b1",
          "CHN", "#e91e63",
          "JPN", "#00acc1",
          "AUS", "#8e24aa",
          "IND", "#fdd835",
          "#b0bec5"
        ],
        "fill-opacity": 0.8
      }
    },
    {
      "id": "countries-borders",
      "type": "line",
      "source": "demotiles",
      "source-layer": "countries",
      "paint": {
        "line-color": "#263238",
        "line-width": 1
      }
    }
  ]
}
