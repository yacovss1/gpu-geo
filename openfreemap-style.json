{
  "version": 8,
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "https://tiles.openfreemap.org/planet"
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f2efe9"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "minzoom": 0, 
      "paint": {
        "fill-color": "#aad3df"
      }
    },
    {
      "id": "landuse_park",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["==", ["get", "class"], "park"],
      "paint": {
        "fill-color": "#d8e8c8",
        "fill-opacity": 0.7
      }
    },
    {
      "id": "landuse_residential",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "maxzoom": 16,
      "filter": ["==", ["get", "class"], "residential"],
      "paint": {
        "fill-color": "#e8e4e0"
      }
    },
    {
      "id": "landcover_wood",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "filter": ["==", ["get", "class"], "wood"],
      "paint": {
        "fill-color": "#B0D5A0",
        "fill-opacity": 1
      }
    },
    {
      "id": "landcover_grass",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "filter": ["==", ["get", "class"], "grass"],
      "paint": {
        "fill-color": "#B0D59A",
        "fill-opacity": 0.4
      }
    },

    {
      "id": "building-3d",
      "type": "fill-extrusion",
      "source": "openmaptiles",
      "source-layer": "building",
      "minzoom": 14,
      "paint": {
        "fill-extrusion-color": "#d9d0c9",
        "fill-extrusion-height": 5,
        "fill-extrusion-base": 0,
        "fill-extrusion-opacity": 1
      }
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "waterway",
      "paint": {
        "line-color": "#a0c8f0",
        "line-width": ["interpolate", ["exponential", 1.4], ["zoom"], 8, 0.5, 12, 1, 16, 1.5, 20, 2]
      }
    },
    {
      "id": "road_minor",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 13,
      "filter": ["==", ["get", "class"], "minor"],
      "paint": {
        "line-color": "#ffffff",
        "line-width": ["interpolate", ["exponential", 1.2], ["zoom"], 13, 0, 14, 0.5, 16, 1, 20, 2]
      }
    },
    {
      "id": "road_service",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 13,
      "filter": ["==", ["get", "class"], "service"],
      "paint": {
        "line-color": "#ffffff",
        "line-width": ["interpolate", ["exponential", 1.2], ["zoom"], 13, 0, 14, 0.3, 16, 0.8, 20, 1.5]
      }
    },
    {
      "id": "road_secondary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", ["get", "class"], "secondary"],
      "paint": {
        "line-color": "#fdb",
        "line-width": ["interpolate", ["exponential", 1.2], ["zoom"], 8, 0, 10, 0.3, 14, 1, 20, 2]
      }
    },
    {
      "id": "road_tertiary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", ["get", "class"], "tertiary"],
      "paint": {
        "line-color": "#fdb",
        "line-width": ["interpolate", ["exponential", 1.2], ["zoom"], 8, 0, 10, 0.3, 14, 1, 20, 2]
      }
    },
    {
      "id": "road_primary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", ["get", "class"], "primary"],
      "paint": {
        "line-color": "#fea",
        "line-width": ["interpolate", ["exponential", 1.2], ["zoom"], 5, 0, 7, 0.5, 14, 1.5, 20, 3]
      }
    },
    {
      "id": "road_trunk",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", ["get", "class"], "trunk"],
      "paint": {
        "line-color": "#fea",
        "line-width": ["interpolate", ["exponential", 1.2], ["zoom"], 5, 0, 7, 0.5, 14, 1.5, 20, 3]
      }
    },
    {
      "id": "road_motorway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 5,
      "filter": ["==", ["get", "class"], "motorway"],
      "paint": {
        "line-color": "#fc8",
        "line-width": ["interpolate", ["exponential", 1.2], ["zoom"], 5, 0, 7, 0.5, 14, 1.5, 20, 3]
      }
    },
    {
      "id": "boundary_country",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "boundary",
      "filter": ["==", ["get", "admin_level"], 2],
      "paint": {
        "line-color": "#808080",
        "line-width": 2
      }
    },

    {
      "id": "place_city",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "minzoom": 3,
      "filter": ["==", ["get", "class"], "city"],
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Noto Sans Regular"],
        "text-size": 14
      },
      "paint": {
        "text-color": "#000000",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    },
    {
      "id": "place_country",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "maxzoom": 9,
      "filter": ["==", ["get", "class"], "country"],
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Noto Sans Bold"],
        "text-size": 16,
        "text-transform": "uppercase"
      },
      "paint": {
        "text-color": "#333333",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    }
  ]
}
