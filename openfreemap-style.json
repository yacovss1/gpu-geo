{
  "version": 8,
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "tiles": ["https://tiles.openfreemap.org/planet/20251105_001001_pt/{z}/{x}/{y}.pbf"],
      "minzoom": 0,
      "maxzoom": 14
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f2efe9"
      }
    },
                {
      "id": "landcover_grass",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "filter": ["==", ["get", "class"], "grass"],
      "paint": {
        "fill-color": "#B0D59A",
        "fill-opacity": 1.0
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "minzoom": 0,
      "metadata": {
        "shader-effects": {
          "type": "animated-water"
        }
      },
      "paint": {
        "fill-color": "#aad3df"
      }
    },
    {
      "id": "water_labels",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "water",
      "minzoom": 4,
      "layout": {
        "text-field": "WATER",
        "text-font": ["Noto Sans Regular"],
        "text-size": 12,
        "symbol-placement": "point",
        "text-anchor": "center"
      },
      "paint": {
        "text-color": "#0066cc",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    },

    {
      "id": "landuse_park",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["==", ["get", "class"], "park"],
      "paint": {
        "fill-color": "#d8e8c8",
        "fill-opacity": 0.7
      }
    },
    {
      "id": "landuse_park_labels",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "minzoom": 10,
      "filter": ["==", ["get", "class"], "park"],
      "layout": {
        "text-field": "PARK",
        "text-font": ["Noto Sans Regular"],
        "text-size": 12,
        "symbol-placement": "point",
        "text-anchor": "center"
      },
      "paint": {
        "text-color": "#2d5016",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    },
    {
      "id": "landuse_residential",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "minzoom": 9,
      "maxzoom": 12,
      "filter": ["==", ["get", "class"], "residential"],
      "paint": {
        "fill-color": "#e8e4e0",
        "fill-opacity": 0.3
      }
    },
    {
      "id": "landcover_wood",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "filter": ["==", ["get", "class"], "wood"],
      "paint": {
        "fill-color": "#39FF1f",
        "fill-opacity": 1
      }
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "waterway",
      "paint": {
        "line-color": "#a0c8f0",
        "line-width": ["interpolate", ["exponential", 1.4], ["zoom"], 8, 0.5, 12, 1, 16, 1.5, 20, 2]
      }
    },
    {
      "id": "pipes_test",
      "type": "line-extrusion",
      "source": "openmaptiles",
      "source-layer": "waterway",
      "minzoom": 8,
      "metadata": {
        "render-as-tubes": true,
        "tube-shape": "circular"
      },
      "paint": {
        "line-color": "#4da6ff",
        "line-width": 2.0,
        "line-extrusion-height": 5,
        "line-extrusion-base": 0
      }
    },
    {
      "id": "road_motorway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 5,
      "filter": ["==", ["get", "class"], "DISABLED_motorway"],
      "paint": {
        "line-color": "#fc8",
        "line-width": ["interpolate", ["exponential", 1.5], ["zoom"], 5, 0.8, 8, 2, 12, 4, 14, 6]
      }
    },
    {
      "id": "road_trunk",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 6,
      "filter": ["==", ["get", "class"], "trunk"],
      "paint": {
        "line-color": "#fea",
        "line-width": ["interpolate", ["exponential", 1.5], ["zoom"], 6, 0.6, 10, 2, 14, 4, 16, 5, 18, 6, 20, 2]
      }
    },
    {
      "id": "road_primary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 7,
      "filter": ["==", ["get", "class"], "primary"],
      "paint": {
        "line-color": "#fea",
        "line-width": ["interpolate", ["exponential", 1.5], ["zoom"], 7, 0.5, 10, 1.5, 14, 3, 16, 4, 18, 5, 20, 1]
      }
    },
    {
      "id": "road_secondary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 9,
      "filter": ["==", ["get", "class"], "secondary"],
      "paint": {
        "line-color": "#fea",
        "line-width": ["interpolate", ["exponential", 1.5], ["zoom"], 9, 0.5, 11, 1, 14, 2.5, 16, 3.5, 18, 4, 20, 1]
      }
    },
    {
      "id": "road_tertiary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 10,
      "filter": ["==", ["get", "class"], "tertiary"],
      "paint": {
        "line-color": "#fea",
        "line-width": ["interpolate", ["exponential", 1.5], ["zoom"], 10, 0.5, 12, 1, 14, 2, 16, 3, 18, 3.5, 20, 1]
      }
    },
    {
      "id": "road_minor",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 13,
      "filter": ["==", ["get", "class"], "minor"],
      "paint": {
        "line-color": "#ffffff",
        "line-width": ["interpolate", ["exponential", 1.5], ["zoom"], 13, 0.5, 14, 1, 16, 2, 18, 2.5, 20, 1]
      }
    },
    {
      "id": "road_service",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 13,
      "filter": ["==", ["get", "class"], "service"],
      "paint": {
        "line-color": "#ffffff",
        "line-width": ["interpolate", ["exponential", 1.5], ["zoom"], 13, 0.4, 14, 0.8, 16, 1.5, 18, 2, 20, 2.5]
      }
    },
    {
      "id": "building-3d",
      "type": "fill-extrusion",
      "source": "openmaptiles",
      "source-layer": "building",
      "minzoom": 14,
      "metadata": {
        "shader-effects": {
          "type": "glass"
        }
      },
      "paint": {
        "fill-extrusion-color": [
          "interpolate",
          ["linear"],
          ["get", "render_height"],
          0, "#a99a86",
          30, "#8899aa",
          60, "#6688bb"
        ],
        "fill-extrusion-height": ["get", "render_height"],
        "fill-extrusion-base": ["get", "render_min_height"],
        "fill-extrusion-opacity": 1
      }
    },
    {
      "id": "building-labels",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "building",
      "minzoom": 16,
      "layout": {
        "text-field": [
          "concat",
          ["to-string", ["get", "render_height"]],
          "m"
        ],
        "text-font": ["Noto Sans Regular"],
        "text-size": 10,
        "symbol-placement": "point",
        "text-anchor": "center"
      },
      "paint": {
        "text-color": "#ffffff",
        "text-halo-color": "#000000",
        "text-halo-width": 2
      }
    },
    {
      "id": "boundary_country",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "boundary",
      "filter": ["==", ["get", "admin_level"], 2],
      "paint": {
        "line-color": "#808080",
        "line-width": 2
      }
    },

    {
      "id": "place_city",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "minzoom": 3,
      "filter": ["==", ["get", "class"], "city"],
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Noto Sans Regular"],
        "text-size": 14
      },
      "paint": {
        "text-color": "#000000",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    },
    {
      "id": "place_country",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "maxzoom": 9,
      "filter": ["==", ["get", "class"], "country"],
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Noto Sans Bold"],
        "text-size": 16,
        "text-transform": "uppercase"
      },
      "paint": {
        "text-color": "#333333",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    }
  ]
}
