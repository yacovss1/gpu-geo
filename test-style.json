{
  "version": 8,
  "name": "Test Style - Solid Red",
  "sources": {
    "demotiles": {
      "type": "vector",
      "tiles": [
        "https://demotiles.maplibre.org/tiles/{z}/{x}/{y}.pbf"
      ],
      "minzoom": 0,
      "maxzoom": 6
    }
  },
  "layers": [
    {
      "id": "countries-fill",
      "type": "fill",
      "source": "demotiles",
      "source-layer": "countries",
      "paint": {
        "fill-color": "#ff0000",
        "fill-opacity": 0.8
      }
    },
    {
      "id": "countries-borders",
      "type": "line",
      "source": "demotiles",
      "source-layer": "countries",
      "paint": {
        "line-color": "#000000",
        "line-width": 2
      }
    }
  ]
}
